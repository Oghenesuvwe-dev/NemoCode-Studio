{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        "**"
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "cmd": "/bin/zsh",
          "name": "zsh",
          "args": true
        },
        {
          "cmd": "/bin/bash",
          "name": "bash",
          "args": true
        },
        {
          "cmd": "/bin/sh",
          "name": "sh",
          "args": true
        }
      ]
    }
  ]
}